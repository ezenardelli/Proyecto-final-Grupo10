<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body class="body-carrito">
    <%- include("../partials/header.ejs") %>
    <main class="main-diego">
        <div class="bloque">
            <div class="bloque-1">
                <section class="formulario-cont">
                    <form class="formulario" action="" method="POST">
                        <h2 class="titulo-cont">DATOS DEL USUARIO</h2>
                        <p class="items-form">
                            <input class="barras-form" type="text" name="nombre" placeholder="Nombre" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="date" name="edad" max="2004-01-05"
                                placeholder="Fecha de nacimiento" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="number" name="documento" placeholder="Documento" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="text" name="nacionalidad" placeholder="Nacionalidad"
                                required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="text" name="Paisresidencia"
                                placeholder="Pais de Residencia" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="text" name="Provincia" placeholder="Provincia" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="number" name="Telefono" placeholder="Telefono" required>
                        </p>
                        <p class="items-form">
                            <input class="barras-form" type="email" name="email" placeholder="Email" required>
                        </p>
                    </form>
                </section>

                <section class="formulario-cont2">
                    <h2 class="titulo-cont">MEDIO DE PAGO</h2>
                    <form class="formulario-2" action="" method="POST">
                        <p class="items-form-2">
                            <input class="barras-form-2" type="number" name="numtarjeta" placeholder="Número de tarjeta"
                                required>
                        </p>
                        <p class="items-form-2">
                            <input class="barras-form-2" type="text" name="nombretarjeta"
                                placeholder="Titular de tarjeta" required>
                        </p>
                        <p class="venc-num-cont">
                            <input class="venc" type="text" name="fechavenc" placeholder="Vencimiento (MM/AA)" required>
                        </p>
                        <p class="venc-num-cont">
                            <input class="num" type="number" name="codigoseg" placeholder="CVV" required>
                        </p>
                        <p class="items-form-2">
                            <input class="barras-form-2" type="number" name="documentotarjeta" placeholder="Documento"
                                required>
                        </p>
                        <p class="items-form-2">
                            <input class="barras-form-2" type="email" name="emailtarjeta" placeholder="Email" required>
                        </p>
                    </form>
                </section>
            </div>
            <div class="bloque-2">
                <section class="contenedor-3">
                    <div class="detalle-cont">
                        <h2 class="titulo-cont">DETALLE DEL PAQUETE</h2>
                        <ul class="detalle-productos" type="none">
                            <li class="lista-resumen">item1</li>
                            <li class="lista-resumen">item2</li>
                            <li class="lista-resumen">item3</li>
                            <li class="lista-resumen">item4</li>
                            <li class="lista-resumen">item5</li>
                            <li class="lista-resumen">item1</li>
                            <li class="lista-resumen">item2</li>
                            <li class="lista-resumen">item3</li>
                            <li class="lista-resumen">item4</li>
                            <li class="lista-resumen">item5</li>
                        </ul>
                        <h3 class="titulos-cont3">Subtotal</h3>
                        <h3 class="titulos-cont3">Total</H3>
                    </div>
                </section>
            </div>
            <section class="contenedor-4">
                <div class="term-cond-cont">
                    <input type="radio" name="terminos" id="terminos" required>
                    <label class="term-cond" for="terminos">Estoy de acuerdo con los términos y condiciones</label>
                </div>
                <div class="boton-cont">
                    <button class="boton-compra" type="submit">Confirmación de Compra</button>
                </div>
            </section>
        </div>


    </main>
    
    <%- include("../partials/footer.ejs") %>
</body>
</html>